@model EmployeeVM
@{
    ViewData["Title"] = "Create Or Edit Employee";
}
<div class="row">
    <div class="col-lg-12">
        <form asp-action="CreateOrEdit" class="form-horizontal">
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div>
                    <h2 class="card-title">@ViewData["Title"]</h2>
                </header>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group row">
                        <label asp-for="FullName" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="FullName" class="form-control">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="DateOfBirth" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="DateOfBirth" class="form-control">
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <label asp-for="FK_Gender" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <select asp-for="FK_Gender"
                                    asp-items="(SelectList)ViewBag.Genders"
                                    class="form-control">
                            </select>
                            <span asp-validation-for="FK_Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="PhoneNumber" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="PhoneNumber" class="form-control">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    @if (Model.Id == 0)
                    {
                        <div class="form-group row">
                            <label asp-for="Password" class="col-sm-2 control-label  pt-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="Password" class="form-control">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <label asp-for="ConfirmPassword" class="col-sm-2 control-label  pt-2"></label>
                            <div class="col-sm-4">
                                <input asp-for="ConfirmPassword" class="form-control">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <input asp-for="Password" type="hidden" />
                        <input asp-for="ConfirmPassword" type="hidden" />
                    }

                    <div class="form-group row">
                        <label asp-for="Fk_Department" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <select asp-for="Fk_Department"
                                    asp-items="(SelectList)ViewBag.Departments"
                                    class="form-control">
                            </select>
                            <span asp-validation-for="Fk_Department" class="text-danger"></span>
                        </div>
                    </div>
                   
                  
                </div>
               

                <footer class="card-footer text-left">
                    <button class="btn btn-primary">Submit </button>
                    <button type="reset" class="btn btn-default">Reset</button>
                    <a asp-action="Index" class="btn btn-success">Back</a>
                </footer>
            </section>
        </form>
    </div>


</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("PartialView/_ValidationScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("PartialView/_FormScriptsPartial");
    }
}


