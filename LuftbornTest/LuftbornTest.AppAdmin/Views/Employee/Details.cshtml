@model Employee
@{
    Layout = null;
    var age = "";
    if (Model == null)
    {
        age = "___";
    }
    else
    {
        age = (DateTime.Now.Year - Model.DateOfBirth.Value.Year).ToString();
    }
}

<div class="row">
    <div class="col-lg-12">
        <form asp-action="CreateOrEdit" class="form-horizontal">
            <section class="card">
               
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group row">
                        <label asp-for="FullName" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="FullName" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label  class="col-sm-2 control-label  pt-2">Age</label>
                        <div class="col-sm-4">
                            <input value="@age" class="form-control" disabled>
                        </div>
                        <label asp-for="Gender" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="Gender.Name" class="form-control" disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="PhoneNumber" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="PhoneNumber" class="form-control" disabled>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" disabled>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label asp-for="Department" class="col-sm-2 control-label  pt-2"></label>
                        <div class="col-sm-10">
                            <input asp-for="Department.Name" class="form-control" disabled>
                           
                        </div>
                    </div>


                </div>

            </section>
        </form>
    </div>


</div>
