@model DepartmentVM
@{
    ViewData["Title"] = "Create Or Edit Department";
}
<div class="row">
    <div class="col-lg-12">
        <form asp-action="CreateOrEdit" class="form-horizontal">
            <section class="card">
                <header class="card-header">
                    <div class="card-actions">
                        <a href="#" class="card-acion card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-acion card-action-dismiss" data-card-dismiss></a>

                    </div>
                    <h2 class="card-title">@ViewData["Title"]</h2>
                </header>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 control-label pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <label asp-for="Location" class="col-sm-2 control-label pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>
                    
                </div>
                <footer class="card-footer text-left">
                    <button class="btn btn-primary"> Submit </button>
                    <button type="reset" class="btn btn-default">Reset</button>
                    <a asp-controller="Department" asp-action="Index" class="btn btn-success">Back</a>
                </footer>
            </section>
        </form>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("PartialView/_ValidationScriptsPartial");
    }
    @{
        await Html.RenderPartialAsync("PartialView/_FormScriptsPartial");
    }
}


