@model Department

@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <form asp-action="CreateOrEdit" class="form-horizontal">
            <section class="card">
                
                <div class="card-body">
                   
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 control-label pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="Name" class="form-control" disabled/>
                          
                        </div>
                        <label asp-for="Location" class="col-sm-2 control-label pt-2"></label>
                        <div class="col-sm-4">
                            <input asp-for="Location" class="form-control" disabled/>
                           
                        </div>
                    </div>

                </div>
                
            </section>
        </form>
    </div>
</div>




